<script>
/**
 * üü¢ Ê†∏ÂøÉÔºö‰∫ßÂìÅÊï∞ÊçÆÂ∫ì
 * ËØ∑ÊääÊÇ® menu.js ÈáåÁöÑ products Êï∞ÁªÑÂÆåÊï¥Â§çÂà∂Âà∞ËøôÈáåÔºåÁ°Æ‰øù ID ÂØπÂ∫î
 */
const products = [
    { id: 1, name: "A LITTLE SWEET", price: 98.00, image: "cake/A_Little_Sweet.jpg" },
    { id: 2, name: "3D Red Velvet Christmas Tree", price: 258.00, image: "cake/3D_Red_Velvet_Christmas_Tree_Cake.jpg" },
    { id: 3, name: "Among Us Galaxy Fresh Cream", price: 158.00, image: "cake/Among_Us_Galaxy_Fresh_Cream_Cake.jpg" },
    // ... Ââ©‰∏ãÁöÑËØ∑Ëá™Ë°åÁ≤òË¥¥ ...
];

document.addEventListener('DOMContentLoaded', () => {
    renderCart();
});

function renderCart() {
    const listContainer = document.getElementById('cartList');
    const summaryArea = document.getElementById('summaryArea');
    const countDisplay = document.getElementById('itemCountDisplay');

    if (!dbCartItems || dbCartItems.length === 0) {
        listContainer.innerHTML = `
            <div class="empty-state">
                <h2>Your cart is empty</h2>
                <button onclick="window.location.href='menu.php'" style="background:var(--accent-color); color:white; border:none; padding:10px 20px; border-radius:5px; cursor:pointer;">Go to Menu</button>
            </div>`;
        summaryArea.style.display = 'none';
        countDisplay.innerText = "0 Items";
        return;
    }

    let html = '';
    let subtotal = 0;
    let totalCount = 0;

    dbCartItems.forEach(item => {
        const product = products.find(p => p.id == item.product_id);
        if (product) {
            const lineTotal = product.price * item.quantity;
            subtotal += lineTotal;
            totalCount += parseInt(item.quantity);

            html += `
                <div class="cart-item">
                    <img src="${product.image}" alt="${product.name}">
                    <div class="item-info">
                        <h4>${product.name}</h4>
                        <p>Unit Price: RM ${product.price.toFixed(2)}</p>
                    </div>
                    <div class="item-qty">
                        <button class="qty-btn" onclick="updateDbQty(${product.id}, -1)">-</button>
                        <span>${item.quantity}</span>
                        <button class="qty-btn" onclick="updateDbQty(${product.id}, 1)">+</button>
                    </div>
                    <div class="item-price">RM ${lineTotal.toFixed(2)}</div>
                    <button class="remove-btn" onclick="removeDbItem(${product.id})">üóëÔ∏è</button>
                </div>`;
        }
    });

    listContainer.innerHTML = html;
    summaryArea.style.display = 'block';
    countDisplay.innerText = `${totalCount} Items`;
    document.getElementById('subtotalPrice').innerText = `RM ${subtotal.toFixed(2)}`;
    document.getElementById('totalPrice').innerText = `RM ${(subtotal + 5).toFixed(2)}`;
}

// üü¢ ÂäüËÉΩ 1Ôºö‰øÆÊîπÊï∞ÊçÆÂ∫ìÊï∞Èáè
function updateDbQty(pId, change) {
    const item = dbCartItems.find(i => i.product_id == pId);
    if (item && parseInt(item.quantity) + change <= 0) {
        removeDbItem(pId);
        return;
    }

    const formData = new FormData();
    formData.append('action', 'add'); 
    formData.append('product_id', pId);
    formData.append('quantity', change);

    fetch('manage_cart.php', { method: 'POST', body: formData })
    .then(res => res.json())
    .then(data => {
        if (data.status === 'success') {
            location.reload(); // Âà∑Êñ∞È°µÈù¢ÂêåÊ≠•Êï∞ÊçÆÂ∫ì
        }
    });
}

// üü¢ ÂäüËÉΩ 2Ôºö‰ªéÊï∞ÊçÆÂ∫ìÂà†Èô§
function removeDbItem(pId) {
    if (!confirm('Are you sure you want to remove this item?')) return;

    const formData = new FormData();
    formData.append('action', 'remove'); 
    formData.append('product_id', pId);

    fetch('manage_cart.php', { method: 'POST', body: formData })
    .then(res => res.json())
    .then(data => {
        if (data.status === 'success') {
            location.reload();
        }
    });
}
</script>

